.v-input {
	&.v-text-field--outline {
		& > .v-input__control > .v-input__slot {
			border: 1px solid rgba(0,0,0,.07);
		}
	}
}

.v-text-field--solo-flat {
	> .v-input__control > .v-input__slot {
		border: 1px solid #E0E0E0; 	//grey lighten-2

	}
}

.v-input--checkbox {
	margin-top: 0;
	padding-top: 0;
	.v-input--selection-controls__input {
		align-items: center;
		padding-top: 4px;
	}
